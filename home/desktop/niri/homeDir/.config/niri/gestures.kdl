// =============================================================================
// niri 手势配置
// =============================================================================
// 此文件定义触摸屏和鼠标手势的行为
// 官方文档: https://github.com/YaLTeR/niri/wiki/Configuration:-Gestures
// 从 niri 25.08 版本开始支持
// =============================================================================

gestures {
    // ==========================================================================
    // 拖放边缘视图滚动
    // ==========================================================================

    // 当拖动窗口到屏幕边缘时，自动滚动视图
    dnd-edge-view-scroll {
        // 触发区域宽度（以逻辑像素为单位）
        // 当拖动的窗口在距离屏幕边缘此距离内时，开始滚动
        trigger-width 40

        // 延迟时间（毫秒）
        // 鼠标停留在触发区域多久后开始滚动
        delay-ms 150

        // 最大滚动速度（像素/秒）
        // 滚动的最快速度
        max-speed 2000
    }

    // ==========================================================================
    // 拖放边缘工作区切换
    // ==========================================================================

    // 当拖动窗口到屏幕上/下边缘时，切换工作区
    dnd-edge-workspace-switch {
        // 触发区域高度（以逻辑像素为单位）
        // 当拖动的窗口在距离屏幕顶部/底部边缘此距离内时，切换工作区
        trigger-height 60

        // 延迟时间（毫秒）
        // 鼠标停留在触发区域多久后开始切换工作区
        delay-ms 150

        // 最大滚动速度（像素/秒）
        // 切换工作区时的滚动速度
        max-speed 2000
    }

    // ==========================================================================
    // 热角功能
    // ==========================================================================

    // 热角: 将鼠标移动到屏幕角落可以触发特定操作
    // 默认: 左上角触发概览模式
    hot-corners {
        // 启用热角功能
        // 如果不想要热角功能，取消下面这行的注释:
        // off

        // =======================================================================
        // 热角位置配置示例 (已禁用)
        // =======================================================================

        // 左上角: 触发概览模式（默认已启用）
        // top-left { overview; }

        // 右上角配置示例
        // top-right {
        //     // 可选操作:
        //     // - overview : 打开概览模式
        //     // - quit : 退出 niri
        //     // - power-off-monitors : 关闭显示器
        // }

        // 左下角配置示例
        // bottom-left {
        //     // 例如: 打开概览模式
        //     // overview;
        // }

        // 右下角配置示例
        // bottom-right {
        //     // 例如: 关闭显示器
        //     // power-off-monitors;
        // }
    }
}
