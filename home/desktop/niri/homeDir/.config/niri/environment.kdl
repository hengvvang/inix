// =============================================================================
// niri 环境变量配置
// =============================================================================
// 此文件定义 niri 运行时的环境变量
// 这些变量会影响应用程序的行为和显示效果
// =============================================================================

environment {
    // ==========================================================================
    // X11/Xwayland 相关设置
    // ==========================================================================

    // X11 显示服务器编号
    // 设置为 ":0" 表示第一个 X 服务器
    DISPLAY ":0"

    // ==========================================================================
    // Electron 应用程序设置
    // ==========================================================================

    // Electron 应用的 Ozone 平台提示
    // "auto" 允许 Electron 应用自动选择最佳的后端 (Wayland 或 X11)
    ELECTRON_OZONE_PLATFORM_HINT "auto"

    // ==========================================================================
    // GTK 应用程序缩放设置
    // ==========================================================================

    // GTK 应用程序的整体缩放因子
    // 1.00 表示 100% 缩放（无缩放）
    // 适用于大部分 X11/GTK 应用
    GDK_SCALE "1.00"

    // GTK DPI 缩放因子
    // 通常保持 1.0，用于微调 DPI 相关的渲染
    GDK_DPI_SCALE "1.0"

    // ==========================================================================
    // Qt 应用程序缩放设置
    // ==========================================================================

    // Qt 应用程序的整体缩放因子
    // 1.00 表示 100% 缩放（无缩放）
    QT_SCALE_FACTOR "1.00"

    // 启用 Qt 应用的自动屏幕缩放
    // "1" 表示启用，"0" 表示禁用
    QT_AUTO_SCREEN_SCALE_FACTOR "1"

    // Qt 字体 DPI 设置 (可选)
    // 例如: 1.5倍缩放对应 144 DPI
    // 如需自定义字体 DPI，请取消下面的注释
    // QT_FONT_DPI "144"

    // ==========================================================================
    // Xwayland 缩放设置
    // ==========================================================================

    // Xwayland (X11应用在Wayland上) 的整体缩放因子
    // 1.00 表示 100% 缩放（无缩放）
    XWAYLAND_SCALE "1.00"

    // ==========================================================================
    // 光标设置
    // ==========================================================================

    // X11 光标大小（以像素为单位）
    // 24 是标准大小，适合大多数屏幕
    XCURSOR_SIZE "24"
}
