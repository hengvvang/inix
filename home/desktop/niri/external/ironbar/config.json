{
  "$schema": "https://f.jstanger.dev/github/ironbar/schema.json",
  "anchor_to_edges": false,
  "position": "top",
  "height": 48,
  "margin": {
    "top": 8,
    "bottom": 0,
    "left": 12,
    "right": 12
  },
  "layer": "top",
  "exclusive_zone": true,
  "popup_gap": 8,
  "icon_theme": "Papirus-Dark",
  "start": [
    {
      "type": "launcher",
      "name": "app-launcher",
      "class": "tahoe-launcher",
      "favorites": [
        "firefox",
        "rio",
        "code",
        "discord",
        "nautilus"
      ],
      "show_names": false,
      "show_icons": true,
      "icon_size": 24,
      "on_click_left": "popup:toggle"
    },
    {
      "type": "focused",
      "name": "focused-window",
      "class": "tahoe-focused",
      "show_icon": true,
      "show_title": true,
      "icon_size": 20,
      "truncate": {
        "mode": "end",
        "length": 50
      }
    }
  ],
  "center": [],
  "end": [
    {
      "type": "tray",
      "name": "system-tray",
      "class": "tahoe-tray",
      "icon_size": 20
    },
    {
      "type": "volume",
      "name": "volume-control",
      "class": "tahoe-volume",
      "format": "{icon} {percentage}%",
      "max_volume": 100,
      "icons": {
        "volume_high": "󰕾",
        "volume_medium": "󰖀",
        "volume_low": "󰕿",
        "muted": "󰝟"
      },
      "on_click_left": "popup:toggle",
      "on_scroll_up": "volume:up",
      "on_scroll_down": "volume:down"
    },
    {
      "type": "upower",
      "name": "battery",
      "class": "tahoe-battery",
      "format": "{icon} {percentage}%",
      "icons": {
        "battery_full": "󰁹",
        "battery_three_quarters": "󰂀",
        "battery_half": "󰁿",
        "battery_quarter": "󰁾",
        "battery_empty": "󰂃",
        "battery_charging": "󰂄"
      },
      "on_click_left": "popup:toggle"
    },
    {
      "type": "network_manager",
      "name": "network",
      "class": "tahoe-network",
      "format": "{icon} {strength}%",
      "interface_name_wifi": "wlan0",
      "interface_name_ethernet": "eth0",
      "icons": {
        "wifi_strength_1": "󰤟",
        "wifi_strength_2": "󰤢",
        "wifi_strength_3": "󰤥",
        "wifi_strength_4": "󰤨",
        "ethernet": "󰈀",
        "disconnected": "󰤫"
      },
      "on_click_left": "popup:toggle"
    },
    {
      "type": "notifications",
      "name": "notifications",
      "class": "tahoe-notifications",
      "show_count": true,
      "icons": {
        "closed_none": "󰍥",
        "closed_some": "󱥂",
        "closed_dnd": "󱅯",
        "open_none": "󰍡",
        "open_some": "󱥁",
        "open_dnd": "󱅮"
      },
      "on_click_left": "popup:toggle"
    },
    {
      "type": "clock",
      "name": "clock",
      "class": "tahoe-clock",
      "format": "%H:%M",
      "format_popup": "%A, %B %d, %Y\n%H:%M:%S",
      "on_click_left": "popup:toggle"
    },
    {
      "type": "custom",
      "name": "power-menu",
      "class": "tahoe-power-menu",
      "bar": [
        {
          "type": "button",
          "name": "power-btn",
          "class": "power-button",
          "label": "󰐥",
          "on_click": "popup:toggle"
        }
      ],
      "popup": [
        {
          "type": "box",
          "name": "power-popup",
          "class": "power-popup-container",
          "orientation": "vertical",
          "widgets": [
            {
              "type": "label",
              "name": "power-header",
              "class": "power-header",
              "label": "Power Options"
            },
            {
              "type": "box",
              "name": "power-buttons",
              "class": "power-buttons-container",
              "orientation": "horizontal",
              "widgets": [
                {
                  "type": "button",
                  "name": "logout-btn",
                  "class": "power-btn logout-btn",
                  "label": "<span font-size='28pt'>󰍃</span>\nLogout",
                  "on_click": "!niri msg action quit"
                },
                {
                  "type": "button",
                  "name": "sleep-btn",
                  "class": "power-btn sleep-btn",
                  "label": "<span font-size='28pt'>󰒲</span>\nSleep",
                  "on_click": "!systemctl suspend"
                },
                {
                  "type": "button",
                  "name": "restart-btn",
                  "class": "power-btn restart-btn",
                  "label": "<span font-size='28pt'>󰜉</span>\nRestart",
                  "on_click": "!systemctl reboot"
                },
                {
                  "type": "button",
                  "name": "shutdown-btn",
                  "class": "power-btn shutdown-btn",
                  "label": "<span font-size='28pt'>󰐥</span>\nShutdown",
                  "on_click": "!systemctl poweroff"
                }
              ]
            }
          ]
        }
      ],
      "tooltip": "Power Options"
    }
  ]
}
