# ===============================================
# 基于内容的过滤规则 - 浅色主题
# ===============================================

# 错误通知
[summary_error]
    summary = "*[Ee]rror*"
    background = "#ff3b3020"
    foreground = "#1d1d1fff"
    frame_color = "#ff3b30aa"
    frame_width = 2
    urgency = critical
    timeout = 0

[summary_failed]
    summary = "*[Ff]ailed*"
    background = "#ff3b3020"
    foreground = "#1d1d1fff"
    frame_color = "#ff3b30aa"
    frame_width = 2
    urgency = critical
    timeout = 0

# 成功通知
[summary_success]
    summary = "*[Ss]uccess*"
    background = "#32d74b20"
    foreground = "#1d1d1fff"
    frame_color = "#32d74b70"
    urgency = low
    timeout = 3

[summary_complete]
    summary = "*[Cc]omplete*"
    background = "#32d74b20"
    foreground = "#1d1d1fff"
    frame_color = "#32d74b70"
    urgency = low
    timeout = 3

[summary_done]
    summary = "*[Dd]one*"
    background = "#32d74b20"
    foreground = "#1d1d1fff"
    frame_color = "#32d74b70"
    urgency = low
    timeout = 3

# 警告通知
[summary_warning]
    summary = "*[Ww]arning*"
    background = "#ff950020"
    foreground = "#1d1d1fff"
    frame_color = "#ff950070"
    urgency = normal
    timeout = 6

# ===============================================
# 进度条颜色设置 - 浅色主题
# ===============================================

# 普通进度条
[urgency_normal]
    progress_bar_frame_color = "#007affff"
    highlight = "#007affff"

# 低优先级进度条
[urgency_low]
    progress_bar_frame_color = "#8e8e9360"
    highlight = "#8e8e9360"

# 高优先级进度条
[urgency_critical]
    progress_bar_frame_color = "#ff3b30ff"
    highlight = "#ff3b30ff"

# ===============================================
# 使用说明和调试
# ===============================================

# 浅色主题配置使用说明：
# 1. 确保安装了 LXGW WenKai Mono 字体
# 2. 确保安装了 Papirus 图标主题（浅色版本）
# 3. 在 niri 配置中启动 dunst：spawn-at-startup "dunst"
# 4. 使用 dunstctl 命令控制通知：
#    - dunstctl close: 关闭通知
#    - dunstctl close-all: 关闭所有通知
#    - dunstctl history-pop: 显示历史
#    - dunstctl action: 执行操作
#    - dunstctl reload: 重新加载配置
#
# 5. 测试通知：
#    notify-send "Test" "这是一个测试通知"
#    notify-send -u critical "重要" "这是紧急通知"
#
# 6. 主题切换：
#    复制此配置文件到 ~/.config/dunst/config
#    或使用主题切换脚本
#
# 浅色主题特点：
# - 使用白色/浅色背景，透明度较低
# - 深色文本，适合明亮环境
# - 柔和的边框和分隔符
# - 与 macOS 浅色模式保持一致
#
# 最佳效果建议：
# - 使用浅色壁纸以突出通知效果
# - 确保合成器支持真透明度
# - 在明亮环境下使用以获得最佳视觉体验
# - 考虑使用 picom 等合成器增强透明效果
