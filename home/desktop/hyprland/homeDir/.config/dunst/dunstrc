[global]
    ### Display ###
    monitor = 0
    follow = mouse

    ### Geometry ###
    width = (300, 400)
    height = 300
    origin = top-right
    offset = 20x50
    scale = 0
    notification_limit = 5

    ### Visual Design
    # Transparency and blur for glass effect
    transparency = 15

    # Modern rounded corners like macOS
    corner_radius = 12

    # Clean separator for multiple notifications
    separator_height = 2
    separator_color = "#ffffff20"

    # Padding for comfortable reading
    padding = 20
    horizontal_padding = 24

    # Frame styling for glass effect
    frame_width = 1
    frame_color = "#ffffff30"

    # Gap between notifications
    gap_size = 8

    ### Typography ###
    # San Francisco-inspired font stack
    font = "SF Pro Display 11, system-ui 11, -apple-system 11, sans-serif 11"

    # Text alignment and formatting
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    min_icon_size = 32
    max_icon_size = 48
    icon_path = "/usr/share/icons/Adwaita/symbolic/status/:/usr/share/icons/Adwaita/symbolic/devices/:/usr/share/icons/hicolor/scalable/apps/"

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Interaction ###
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true

    ### Mouse ###
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    ### Animation and Timing ###
    # Smooth animations like macOS
    show_age_threshold = 60
    idle_threshold = 120

    ### Title and Class ###
    title = Dunst
    class = Dunst

    ### Startup notification ###
    startup_notification = false

    ### Verbosity ###
    verbosity = mesg

    ### Layout ###
    indicate_hidden = yes
    sort = yes

    ### Text ###
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    word_wrap = yes
    ignore_dbusclose = false

    ### Legacy ###
    force_xinerama = false

### Urgency-based styling for visual hierarchy ###

[urgency_low]
    # Low priority - subtle glass effect
    background = "#1c1c1e90"
    foreground = "#ffffff"
    frame_color = "#ffffff20"
    timeout = 8
    # Subtle blue tint for low priority
    highlight = "#007aff80"

[urgency_normal]
    # Normal priority - standard glass effect
    background = "#1c1c1e95"
    foreground = "#ffffff"
    frame_color = "#ffffff30"
    timeout = 10
    # System blue highlight
    highlight = "#007aff"

[urgency_critical]
    # Critical - more opaque with red accent
    background = "#1c1c1ea0"
    foreground = "#ffffff"
    frame_color = "#ff453a80"
    timeout = 0
    # Critical red highlight
    highlight = "#ff453a"

