# rmpc 极简配置示例
# 适合喜欢简洁界面的用户

#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    // 基本连接
    address: "127.0.0.1:6600",
    password: None,
    
    // 最小配置
    cache_dir: None,
    lyrics_dir: None,
    theme: None,
    
    // 性能优化
    max_fps: 15,
    scrolloff: 0,
    wrap_navigation: false,
    enable_mouse: false,
    enable_config_hot_reload: false,
    
    // 简单播放控制
    volume_step: 10,
    rewind_to_start_sec: None,
    status_update_interval_ms: Some(2000),
    select_current_song_on_change: false,
    center_current_song_on_change: false,
    
    // 默认超时
    mpd_read_timeout_ms: 10000,
    mpd_write_timeout_ms: 5000,
    mpd_idle_read_timeout_ms: None,
    
    // 不同步播放列表
    reflect_changes_to_playlist: false,
    
    // 禁用专辑封面
    album_art: (
        method: None,
        max_size_px: (width: 0, height: 0),
        disabled_protocols: ["http://", "https://"],
        vertical_align: Center,
        horizontal_align: Center,
    ),
    
    // 无通知
    on_song_change: None,
    on_resize: None,
    
    // 简单搜索
    search: (
        case_sensitive: false,
        mode: Contains,
        tags: [
            (value: "any", label: "Any"),
            (value: "artist", label: "Artist"),
            (value: "title", label: "Title"),
        ],
    ),
    
    // 简单艺术家视图
    artists: (
        album_display_mode: NameOnly,
        album_sort_by: Name,
    ),
    
    // 基本排序
    browser_song_sort: [Title],
    directories_sort: Format(group_by_type: false, reverse: false),
    show_playlists_in_browser: None,
    
    // 最小键位绑定
    keybinds: (
        global: {
            "q": Quit,
            "p": TogglePause,
            ">": NextTrack,
            "<": PreviousTrack,
            "?": ShowHelp,
        },
        navigation: {
            "j": Down,
            "k": Up,
            "<CR>": Confirm,
        },
        queue: {
            "<CR>": Play,
            "d": Delete,
        },
    ),
    
    // 单一标签页布局
    tabs: [
        (name: "Queue", pane: Pane(Queue)),
        (name: "Files", pane: Pane(Directories)),
        (name: "Search", pane: Pane(Search)),
    ],
)
