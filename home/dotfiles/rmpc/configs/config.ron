#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
  // RMPC 外部配置文件示例
  // 此文件用于 external 配置方式演示
  
  // MPD 服务器连接配置
  address: "127.0.0.1:6600",
  password: None,
  
  // 主题配置 - 使用默认主题
  theme: None,
  
  // 基础配置参数
  volume_step: 5,                          // 音量调节步长
  max_fps: 60,                            // 最大帧率
  scrolloff: 3,                           // 滚动边距
  wrap_navigation: true,                   // 列表边界换行
  enable_mouse: true,                      // 启用鼠标支持
  select_current_song_on_change: true,     // 自动选中当前歌曲
  
  // 专辑封面显示配置
  album_art: (
    method: Auto,                          // 自动检测显示方法
    max_size_px: (width: 250, height: 250), // 最大显示尺寸
    disabled_protocols: ["http://", "https://"],
    vertical_align: Center,
    horizontal_align: Center,
  ),
  
  // Vim 风格键绑定
  keybinds: (
    global: {
      "p":       TogglePause,
      "q":       Quit,
      ">":       NextTrack,
      "<":       PreviousTrack,
      "+":       VolumeUp,
      "-":       VolumeDown,
      "1":       SwitchToTab("Queue"),
      "2":       SwitchToTab("Search"),
    },
    navigation: {
      "j":       Down,
      "k":       Up,
      "h":       Left,
      "l":       Right,
      "g":       Top,
      "G":       Bottom,
      "<CR>":    Confirm,
      "<Esc>":   Close,
    },
    queue: {
      "<CR>":    Play,
      "d":       Delete,
    },
  ),
)
