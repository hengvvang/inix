#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    // Rose Pine 主题配置
    // 基于 Rose Pine 配色方案 - https://rosepinetheme.com/
    
    default_album_art_path: None,
    show_song_table_header: true,
    draw_borders: true,
    modal_backdrop: true,  // 启用模态框背景
    format_tag_separator: " • ",  // 使用更优雅的分隔符
    browser_column_widths: [20, 38, 42],
    
    // Rose Pine 核心颜色配置
    background_color: "#191724",        // Base - 深紫色背景
    text_color: "#e0def4",             // Text - 主文本颜色
    header_background_color: "#1f1d2e", // Surface - 头部背景
    modal_background_color: "#26233a",   // Overlay - 模态框背景
    
    // 预览和标签样式
    preview_label_style: (fg: "#f6c177", modifiers: "Bold"),           // Gold - 预览标签
    preview_metadata_group_style: (fg: "#c4a7e7", modifiers: "Bold"), // Iris - 元数据组
    
    // 标签栏配置 - Rose Pine 风格
    tab_bar: (
        enabled: true,
        active_style: (fg: "#191724", bg: "#c4a7e7", modifiers: "Bold"),    // 活动标签：黑底紫字
        inactive_style: (fg: "#908caa"),                                     // 非活动标签：次要文本色
    ),
    
    // 进度条样式 - 修复格式
    progress_bar: (
        symbols: ["▐", "█", "▌", "─", "▌"],        // [start, elapsed, thumb, track, end]
        track_style: (fg: "#26233a"),              // 空白轨道 - Overlay
        elapsed_style: (fg: "#ebbcba"),            // 已播放部分 - Rose
        thumb_style: (fg: "#c4a7e7", bg: "#26233a"), // 拖拽按钮 - Iris
    ),
    
    // 滚动条样式
    scrollbar: (
        symbols: ["│", "█", "▲", "▼"],           // [track, thumb, end_top, end_bot]
        track_style: (fg: "#26233a"),            // 轨道颜色 - Overlay
        ends_style: (fg: "#908caa"),             // 端点颜色 - Subtle
        thumb_style: (fg: "#c4a7e7"),            // 滑块颜色 - Iris
    ),
    
    // 界面边框样式 (修复属性名)
    borders_style: (fg: "#26233a"),                                    // 边框颜色 - Overlay
    highlight_border_style: (fg: "#c4a7e7", modifiers: "Bold"),       // 高亮边框 - Iris
    
    // 符号配置
    symbols: (
        song: "♪",                             // 歌曲符号
        dir: "📁",                             // 目录符号
        playlist: "🎵",                        // 播放列表符号  
        marker: "▶",                           // 标记符号
        ellipsis: "…",                         // 省略号
        song_style: (fg: "#ebbcba"),          // 歌曲符号样式 - Rose
        dir_style: (fg: "#c4a7e7", modifiers: "Bold"),         // 目录符号样式 - Iris
        playlist_style: (fg: "#f6c177", modifiers: "Bold"),    // 播放列表符号样式 - Gold
    ),
    
    // 消息级别样式
    level_styles: (
        info: (fg: "#9ccfd8", bg: "#191724"),    // Pine
        warn: (fg: "#f6c177", bg: "#191724"),    // Gold
        error: (fg: "#eb6f92", bg: "#191724"),   // Love
        debug: (fg: "#31748f", bg: "#191724"),   // Foam
        trace: (fg: "#c4a7e7", bg: "#191724"),   // Iris
    ),
    
    // 高亮和选择样式
    highlighted_item_style: (fg: "#c4a7e7", modifiers: "Bold"),                      // 高亮项 - Iris
    current_item_style: (fg: "#191724", bg: "#c4a7e7", modifiers: "Bold"),          // 当前项 - 反色显示
    
    
    // 歌曲表格格式配置
    song_table_format: [
        (
            prop: (kind: Property(Artist)),
            width: "25%",
        ),
        (
            prop: (kind: Property(Title)),
            width: "40%",
        ),
        (
            prop: (kind: Property(Album), style: (fg: "#ebbcba")),
            width: "25%",
        ),
        (
            prop: (kind: Property(Duration)),
            width: "10%",
            alignment: Right,
        ),
    ],
    
    // 浏览器歌曲格式
    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)),
                (kind: Text(". ")),
            ])
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")),
                (kind: Property(Title)),
            ])
        ),
    ],
    
    // 布局配置 - 基本垂直布局
    layout: Split(
        direction: Vertical,
        panes: [
            (
                pane: Pane(Header),
                size: "2",
            ),
            (
                pane: Pane(Tabs),
                size: "3",
            ),
            (
                pane: Pane(TabContent),
                size: "100%",
            ),
            (
                pane: Pane(ProgressBar),
                size: "1",
            ),
        ],
    ),
    
    // 组件配置
    components: {},
    
    // 头部配置
    header: (
        rows: [
            (
                left: [
                    (kind: Text("["), style: (fg: "#f6c177", modifiers: "Bold")),
                    (kind: Property(Status(State)), style: (fg: "#f6c177", modifiers: "Bold")),
                    (kind: Text("]"), style: (fg: "#f6c177", modifiers: "Bold"))
                ],
                center: [
                    (kind: Property(Song(Title)), style: (modifiers: "Bold"))
                ],
                right: [
                    (kind: Property(Widget(Volume)), style: (fg: "#9ccfd8"))
                ]
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed))),
                    (kind: Text(" / ")),
                    (kind: Property(Status(Duration)))
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "#f6c177", modifiers: "Bold")),
                    (kind: Text(" - ")),
                    (kind: Property(Song(Album)))
                ],
                right: []
            ),
        ],
    ),
    
    // 歌词配置
    lyrics: (
        timestamp: false
    )
)
