/*******************************************
 * Rofi Configuration - macOS Style
 * 类似 macOS Big Sur/Monterey 的透明效果
 *******************************************/

configuration {
    /* 基础配置 */
    modi: "drun,run,window,ssh,filebrowser";
    font: "LXGW WenKai 12";
    show-icons: true;
    icon-theme: "Papirus";
    display-drun: " 应用";
    display-run: " 运行";
    display-window: " 窗口";
    display-ssh: " SSH";
    display-filebrowser: " 文件";
    
    /* 行为配置 */
    case-sensitive: false;
    sort: true;
    sorting-method: "fzf";
    matching: "fuzzy";
    cycle: true;
    
    /* 窗口配置 */
    location: 0;         /* 居中 */
    width: 650;
    lines: 8;
    columns: 1;
    fixed-num-lines: false;
    hide-scrollbar: false;
    
    /* 终端配置 */
    terminal: "rio";
    
    /* 性能配置 */
    lazy-grab: true;
    parse-hosts: true;
    parse-known-hosts: true;
}

/* 应用主题 */
@theme "macos-tathoe"
