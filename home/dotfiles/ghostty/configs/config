# Ghostty 终端配置 - 外部文件引用方式

# 字体设置 - 更好的字体和大小
font-family = "JetBrainsMono Nerd Font"
font-size = 13
font-feature = -liga  # 禁用连字符（某些情况下更清晰）

# 主题设置
theme = "tokyo-night"

# 窗口设置 - 更好的视觉效果
window-opacity = 0.95
window-decoration = true
window-padding-x = 8
window-padding-y = 8
window-colorspace = srgb

# 光标设置 - 更友好的光标
cursor-style = "block"
cursor-blink = true
cursor-blink-interval = 500

# 鼠标设置 - 更好的用户体验
mouse-hide-while-typing = true
mouse-shift-capture = true

# 选择设置
copy-on-select = true

# 滚动设置 - 更好的滚动体验
scrollback-limit = 50000
auto-update = check

# Shell 设置 - 更好的shell集成
shell-integration = true
shell-integration-features = "cursor,sudo,title"

# 快捷键设置 - 更符合人体工程学的键位
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+enter=toggle_fullscreen
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1
keybind = ctrl+shift+zero=reset_font_size

# 工作区管理
keybind = ctrl+shift+1=goto_tab:1
keybind = ctrl+shift+2=goto_tab:2
keybind = ctrl+shift+3=goto_tab:3
keybind = ctrl+shift+4=goto_tab:4
keybind = ctrl+shift+5=goto_tab:5
keybind = ctrl+shift+6=goto_tab:6
keybind = ctrl+shift+7=goto_tab:7
keybind = ctrl+shift+8=goto_tab:8
keybind = ctrl+shift+9=goto_tab:9

# 面板管理
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab

# 性能设置
confirm-close-surface = false
quit-after-last-window-closed = true

# 渲染设置
renderer = auto
unfocused-split-opacity = 0.7
