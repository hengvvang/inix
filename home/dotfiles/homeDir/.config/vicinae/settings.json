{
    // Vicinae 配置文件
    // 此文件会与默认配置合并,这里定义的值会覆盖默认值
    // 可以通过 GUI 修改配置,修改时此文件的注释和格式会丢失
    //
    // 默认配置查看命令: vicinae config default
    // 官方文档: https://docs.vicinae.com/config
    // ==========================================================================
    // 窗口行为设置
    // ==========================================================================
    // 失去焦点时关闭窗口
    // true: 点击窗口外部时自动关闭 vicinae (推荐)
    // false: 需要手动关闭窗口
    "close_on_focus_loss": true,
    // 关闭窗口时返回根搜索
    // true: 每次打开 vicinae 都从根搜索开始
    // false: 保持上次的搜索状态
    "pop_to_root_on_close": false,
    // 将 IME 预编辑字符串视为搜索文本
    // 用于改进中文/日文等输入法的支持
    "consider_preedit": true,
    // ==========================================================================
    // 搜索设置
    // ==========================================================================
    // 在根搜索中搜索文件
    // true: 在主搜索界面就能搜索文件
    // false: 需要专门进入文件搜索
    "search_files_in_root": true,
    // Favicon 服务提供商
    // 可选值: "twenty" | "google" | "none"
    // - twenty: 使用 twenty service (推荐)
    // - google: 使用 Google favicon service
    // - none: 禁用 favicon,使用占位图标
    "favicon_service": "twenty",
    // ==========================================================================
    // 键盘绑定方案
    // ==========================================================================
    // 导航键盘绑定模式
    // 可选值: "default" | "emacs"
    // - default: Vim 风格 (Ctrl+J/K 上下, Ctrl+H/L 左右)
    // - emacs: Emacs 风格 (Ctrl+N/P 上下, Ctrl+Alt+B/F 左右)
    "keybinding": "default",
    // ==========================================================================
    // 字体设置
    // ==========================================================================
    "font": {
        "normal": {
            // 字体家族
            // "auto": 使用系统默认字体
            // 或指定字体名称,如: "JetBrains Mono", "Fira Code" 等
            "family": "auto",
            // 字体大小 (磅值)
            // 默认: 10.5
            // 推荐范围: 9-14
            "size": 11
        }
    },
    // ==========================================================================
    // 主题设置
    // ==========================================================================
    "theme": {
        // 亮色主题配置
        "light": {
            // 主题名称
            // 内置主题: "vicinae-light"
            // 或自定义主题名称
            "name": "vicinae-light",
            // 图标主题
            // "auto": 自动检测系统图标主题
            // 或指定图标主题名称
            "icon_theme": "auto"
        },
        // 暗色主题配置
        "dark": {
            // 主题名称
            // 内置主题: "vicinae-dark"
            // 或自定义主题名称
            "name": "vicinae-dark",
            // 图标主题
            "icon_theme": "auto"
        }
    },
    // ==========================================================================
    // 启动器窗口设置
    // ==========================================================================
    "launcher_window": {
        // 窗口不透明度
        // 范围: 0.0 (完全透明) - 1.0 (完全不透明)
        // 推荐: 0.95 - 0.98
        "opacity": 0.96,
        // 客户端装饰 (CSD)
        "csd": {
            // 启用客户端装饰
            // true: 使用 vicinae 自己的窗口边框
            // false: 使用系统窗口边框
            "enabled": true,
            // 窗口圆角半径 (像素)
            // 推荐: 10-16
            "rounding": 12,
            // 边框宽度 (像素)
            "border_width": 2
        },
        // 窗口大小
        "size": {
            // 窗口宽度 (像素)
            "width": 800,
            // 窗口高度 (像素)
            "height": 500
        },
        // 显示器选择
        // "auto": 在鼠标所在的显示器上显示
        // 或指定显示器索引: 0, 1, 2 等
        "screen": "auto",
        // Layer Shell 配置 (Wayland)
        "layer_shell": {
            // Layer Shell 作用域
            "scope": "vicinae",
            // 键盘交互模式
            // "exclusive": 独占键盘输入
            // "on-demand": 按需键盘输入
            "keyboard_interactivity": "exclusive",
            // 窗口层级
            // "top": 顶层
            // "overlay": 覆盖层
            // "bottom": 底层
            "layer": "top",
            // 启用 Layer Shell
            // true: 使用 Wayland Layer Shell
            // false: 使用普通窗口
            "enabled": true
        }
    },
    // ==========================================================================
    // 收藏项目
    // ==========================================================================
    // 收藏的功能入口点,显示在搜索顶部
    // 格式: "@扩展名称:功能名称"
    "favorites": [
        "@vicinae/clipboard:history"
    ],
    // ==========================================================================
    // 后备命令
    // ==========================================================================
    // 当没有搜索结果时建议的入口点
    "fallbacks": [
        "@vicinae/files:search"
    ],
    // ==========================================================================
    // 自定义快捷键
    // ==========================================================================
    // 全局快捷键映射
    // 格式: "快捷键ID": "按键组合"
    // 留空表示使用默认快捷键
    "keybinds": {},
    // ==========================================================================
    // 扩展配置
    // ==========================================================================
    // 扩展的配置和偏好设置
    // 格式: "扩展名称": { 配置选项 }
    "providers": {}
}
