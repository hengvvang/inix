{
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 13,
  
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  
  "tab_size": 2,
  "hard_tabs": false,
  "show_whitespaces": "selection",
  "wrap_guides": [80, 120],
  "preferred_line_length": 80,
  "soft_wrap": "prefer_line",
  
  "scrollbar": {
    "show": "always"
  },
  "minimap": {
    "enabled": true
  },
  
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  
  "git": {
    "git_gutter": "tracked_files"
  },
  
  "languages": {
    "Nix": {
      "tab_size": 2,
      "hard_tabs": false,
      "formatter": "language_server"
    },
    "Python": {
      "tab_size": 4,
      "hard_tabs": false,
      "formatter": "language_server"
    },
    "Rust": {
      "tab_size": 4,
      "hard_tabs": false,
      "formatter": "language_server"
    },
    "JavaScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "formatter": "prettier"
    },
    "TypeScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "formatter": "prettier"
    }
  },
  
  "terminal": {
    "font_family": "JetBrains Mono",
    "font_size": 13
  },
  
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "auto_update": false,
  
  "collaboration_panel": {
    "button": false
  }
}
