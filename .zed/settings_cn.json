            "language_servers": ["svelte-language-server"],
            "prettier": {
                "allowed": true,
                "plugins": ["prettier-plugin-svelte"]
            }
        },
        // TSX 语言设置
        "TSX": {
            "language_servers": ["typescript-language-server"],
            "prettier": {
                "allowed": true
            }
        },
        // Twig 语言设置
        "Twig": {
            "prettier": {
                "allowed": true
            }
        },
        // TypeScript 语言设置
        "TypeScript": {
            "language_servers": ["typescript-language-server"],
            "prettier": {
                "allowed": true
            }
        },
        // SystemVerilog 语言设置
        "SystemVerilog": {
            "format_on_save": "on",
            "use_on_type_format": false
        },
        // Vue.js 语言设置
        "Vue.js": {
            "language_servers": ["vue-language-server"],
            "prettier": {
                "allowed": true
            }
        },
        // XML 语言设置
        "XML": {
            "prettier": {
                "allowed": true,
                "plugins": ["@prettier/plugin-xml"]
            }
        },
        // YAML 语言设置
        "YAML": {
            "prettier": {
                "allowed": true
            }
        },
        // Zig 语言设置
        "Zig": {
            "language_servers": ["zls"]
        }
    },
    // 语言模型设置
    "language_models": {
        // Anthropic 设置
        "anthropic": {
            "api_url": "https://api.anthropic.com"
        },
        // Google 设置
        "google": {
            "api_url": "https://generativelanguage.googleapis.com"
        },
        // Ollama 设置
        "ollama": {
            "api_url": "http://localhost:11434"
        },
        // OpenAI 设置
        "openai": {
            "api_url": "https://api.openai.com/v1"
        },
        // OpenAI 兼容设置
        "openai_compatible": {},
        // Open Router 设置
        "open_router": {
            "api_url": "https://openrouter.ai/api/v1"
        },
        // LM Studio 设置
        "lmstudio": {
            "api_url": "http://localhost:1234/v1"
        },
        // DeepSeek 设置
        "deepseek": {
            "api_url": "https://api.deepseek.com/v1"
        },
        // Mistral 设置
        "mistral": {
            "api_url": "https://api.mistral.ai/v1"
        }
    },
    // Prettier 设置
    "prettier": {
        // 在此处可以添加全局 Prettier 配置
    },
    // JSX 标签自动关闭设置
    "jsx_tag_auto_close": {
        // 是否启用（默认：true）
        "enabled": true
    },
    // LSP 设置
    "lsp": {
        // 在此处可以配置特定的 LSP 设置
    },
    // 全局 LSP 设置
    "global_lsp_settings": {
        // 是否显示 LSP 按钮（默认：true）
        "button": true
    },
    // Jupyter 设置
    "jupyter": {
        // 是否启用 Jupyter 支持（默认：false）
        "enabled": false
    },
    // Vim 模式设置
    "vim": {
        // 默认模式：
        // - "normal": 普通模式
        // - "insert": 插入模式
        "default_mode": "normal",
        // 是否切换相对行号（默认：false）
        "toggle_relative_line_numbers": false,
        // 是否使用系统剪贴板（默认：true）
        "use_system_clipboard": "always",
        // 是否使用智能大小写查找（默认：false）
        "use_smartcase_find": false,
        // 复制时高亮持续时间（毫秒）
        "highlight_on_yank_duration": 200,
        // 自定义二合字母
        "custom_digraphs": {},
        // 光标形状设置
        "cursor_shape": {
            // 插入模式光标形状
            "insert": "bar",
            // 普通模式光标形状
            "normal": "block"
        }
    },
    // 服务器 URL
    "server_url": "https://zed.dev",
    // 预览设置
    "preview": {
        // 是否启用预览功能（默认：true）
        "enabled": true
    },
    // 夜间版设置
    "nightly": {
        // 是否启用夜间版功能（默认：false）
        "enabled": false
    },
    // 稳定版设置
    "stable": {
        // 是否启用稳定版功能（默认：true）
        "enabled": true
    },
    // 开发版设置
    "dev": {
        // 是否启用开发版功能（默认：false）
        "enabled": false
    },
    // 行指示器格式：
    // - "simple": 简单格式（行:列）
    // - "long": 详细格式（第X行，第Y列）
    "line_indicator_format": "short",
    // 代理设置
    "proxy": "http://127.0.0.1:7890",
    // 命令别名
    "command_aliases": {
        // 示例: "custom_command": "original_command"
    },
    // SSH 连接设置
    "ssh_connections": [
        // 示例配置
