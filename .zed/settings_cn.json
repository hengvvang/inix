{
    // 用于 UI 的 Zed 主题名称。
    //
    // `mode` 选项为：
    // - "system": 使用与系统外观对应的主题
    // - "light": 使用 "light" 字段指定的主题
    // - "dark": 使用 "dark" 字段指定的主题
    "theme": {
        "mode": "system",
        "light": "Rosé Pine Dawn",
        "dark": "Rosé Pine"
    },
    "icon_theme": "VSCode Great Icons Theme",
    // 要使用的基础键位绑定设置的名称。
    // 此设置可以取六个值，每个都以另一个文本编辑器命名：
    //
    // 1. "VSCode"
    // 2. "Atom"
    // 3. "JetBrains"
    // 4. "None"
    // 5. "SublimeText"
    // 6. "TextMate"
    "base_keymap": "VSCode",
    // 可以全局启用或禁用的功能
    "features": {
        // 要使用的编辑预测提供程序。
        "edit_prediction_provider": "zed"
    },
    // 用于在编辑器中渲染文本的字体名称
    "buffer_font_family": "Zed Plex Mono",
    // 设置缓冲区文本的字体回退，这将与平台的默认回退合并。
    "buffer_font_fallbacks": null,
    // 为编辑器中的文本启用的 OpenType 功能。
    "buffer_font_features": {
        // 禁用连字：
        // "calt": false
    },
    // 编辑器中文本的默认字体大小
    "buffer_font_size": 15,
    // 编辑器字体的粗细，使用标准 CSS 单位，从 100 到 900。
    "buffer_font_weight": 400,
    // 设置缓冲区的行高。
    // 可以取 3 个值：
    //  1. 使用适合阅读的行高 (1.618)
    //         "buffer_line_height": "comfortable"
    //  2. 使用标准行高 (1.3)
    //         "buffer_line_height": "standard",
    //  3. 使用自定义行高
    //         "buffer_line_height": 2
    "buffer_line_height": {
        "custom": 1.382
    },
    // UI 字体系列
    "ui_font_family": "Zed Sans",
    // 设置 UI 文本的字体回退，这将与平台的默认回退合并。
    "ui_font_fallbacks": null,
    // 为 UI 中的文本启用的 OpenType 功能。
    "ui_font_features": {
        // 启用上下文替代（连字）：
        "calt": true
    },
    // UI 字体的粗细
    "ui_font_weight": 400,
    // UI 字体大小
    "ui_font_size": 16,
    // AI 助手字体大小
    "agent_font_size": 14,
    // 是否淡化不必要的代码
    "unnecessary_code_fade": 0.6,
    // 活动窗格修饰符
    "active_pane_modifiers": {
        // 边框大小（像素）
        "border_size": 1,
        // 非活动窗格的不透明度
        "inactive_opacity": 0.6
    },
    // 底部面板布局
    "bottom_dock_layout": "compact",
    // 水平分割窗格的方向
    "pane_split_direction_horizontal": "up",
    // 垂直分割窗格的方向
    "pane_split_direction_vertical": "left",
    // 居中布局设置
    "centered_layout": {
        // 左侧填充
        "left_padding": 0.15,
        // 右侧填充
        "right_padding": 0.15
    },
    // 图像查看器设置
    "image_viewer": {
        // 缩放单位（"fit" 或 "percent"）
        "unit": "fit"
    },
    // 多光标修饰键。如果为 "cmd_or_ctrl"，则在 macOS 上使用 cmd，在 Linux/Windows 上使用 ctrl。
    // 如果为 "alt"，则在所有平台上使用 alt 键。
    "multi_cursor_modifier": "cmd_or_ctrl",
    // 是否启用 vim 模式（默认：false）
    "vim_mode": false,
    // 是否启用 helix 模式（默认：false）
    "helix_mode": false,
    // 是否启用悬停弹出窗口
    "hover_popover_enabled": true,
    // 悬停弹出窗口延迟（毫秒）
    "hover_popover_delay": 1500,
    // 是否在退出时确认
    "confirm_quit": true,
    // 启动时恢复选项：
    // - "last_workspace": 始终恢复上次工作空间（默认）
    // - "last_session": 恢复上次会话，除非使用 CLI 参数提供路径
    // - "none": 始终从空白状态开始，除非使用 CLI 参数提供路径
    "restore_on_startup": "last_session",
    // 重新打开文件时恢复选项：
    // - "last_file": 重新打开上次查看的文件（默认）
    // - "newest_file": 重新打开最新的文件
    // - "oldest_file": 重新打开最旧的文件
    // - "none": 不重新打开任何文件
    "restore_on_file_reopen": "last_file",
    // 文件被删除时是否关闭（默认：false）
    "close_on_file_delete": false,
    // 拖放目标大小（百分比）。值应在 0.0 到 1.0 之间。
    // 较高的值会产生更大的拖放目标。
    "drop_target_size": 0.2,
    // 关闭没有标签页的窗口时的行为：
    // - "close": 关闭窗口
    // - "keep": 保持窗口打开
    // - "platform_default": 使用平台默认行为
    "when_closing_with_no_tabs": "platform_default",
    // 关闭最后一个窗口时的行为：
    // - "close": 关闭应用程序
    // - "keep": 保持应用程序运行
    // - "platform_default": 使用平台默认行为
    "on_last_window_closed": "platform_default",
    // 是否使用系统路径提示（默认：true）
    "use_system_path_prompts": true,
    // 是否使用系统提示对话框而不是内置提示
    // 用于确认、警告等。（默认：true）
    "use_system_prompts": true,
    // 是否闪烁光标（默认：true）
    "cursor_blink": true,
    // 光标形状选项：
    // - "bar": 竖线光标
    // - "block": 块状光标
    // - "underline": 下划线光标
    // - "hollow": 空心光标
    "cursor_shape": "bar",
    // 是否在打字时隐藏鼠标光标
    // - true: 打字时隐藏
    // - false: 不隐藏
    // - "on_keystroke": 按键时隐藏
    "hide_mouse": false,
    // 代码片段排序顺序：
    // - "alphabetical": 按字母顺序排序
    // - "recent": 按最近使用排序
    "snippet_sort_order": "alphabetical",
    // 当前行高亮设置：
    // - "all": 高亮所有当前行
    // - "gutter": 仅高亮行号区域
    // - "line": 仅高亮行内容
    // - "none": 不高亮
    "current_line_highlight": "all",
    // 选择高亮（默认：true）
    "selection_highlight": true,
    // LSP 高亮防抖时间（毫秒）
    "lsp_highlight_debounce": 250,
    // 是否在输入时显示补全（默认：true）
    "show_completions_on_input": true,
    // 是否显示补全文档（默认：true）
    "show_completion_documentation": true,
    // 是否自动显示签名帮助（默认：true）
    "auto_signature_help": true,
    // 编辑后是否显示签名帮助（默认：false）
    "show_signature_help_after_edits": false,
    // 是否显示内联代码操作（默认：true）
    "inline_code_actions": true,
    // 拖拽选择设置
    "drag_and_drop_selection": {
        // 是否启用拖拽选择
        "enabled": true,
        // 拖拽延迟（毫秒）
        "delay": 150
    },
    // 转到定义的回退行为：
    // - "lsp": 使用 LSP（语言服务器协议）
    // - "grep": 使用文本搜索
    "go_to_definition_fallback": "lsp",
    // 诊断最大严重级别：
    // - "error": 仅显示错误
    // - "warning": 显示警告和错误
    // - "information": 显示信息、警告和错误
    // - "hint": 显示所有级别
    "diagnostics_max_severity": "hint",
    // 是否显示换行引导线（默认：true）
    "show_wrap_guides": true,
    // 换行引导线列位置
    "wrap_guides": [80, 120],
    // 是否编辑私有值（默认：false）
    "redact_private_values": false,
    // 展开摘录行数
    "expand_excerpt_lines": 3,
    // 私有文件模式
    "private_files": [
        "**/.env*",
        "**/secrets.yml",
        "**/credentials.yml",
        "**/*key*",
        "**/*secret*"
    ],
    // 是否使用输入时格式化（默认：false）
    "use_on_type_format": false,
    // 是否使用自动关闭括号等（默认：true）
    "use_autoclose": true,
    // 是否使用自动环绕（默认：true）
    "use_auto_surround": true,
    // 粘贴时是否自动缩进（默认：true）
    "auto_indent_on_paste": true,
    // 是否始终将括号视为自动关闭的（默认：false）
    // 当为 true 时，删除左括号也会删除右括号，
    // 无论它是如何插入的。
    "always_treat_brackets_as_autoclosed": false,
    // 是否允许重新换行（默认：false）
    // 当为 true 时，Zed 将在 preferred_line_length 处换行长行
    "allow_rewrap": false,
    // 是否显示编辑预测（默认：true）
    "show_edit_predictions": true,
    // 在以下语言中禁用编辑预测
    "edit_predictions_disabled_in": ["markdown"],
    // 空白字符显示设置：
    // - "all": 显示所有空白字符
    // - "none": 不显示空白字符
    // - "boundary": 仅在词边界显示
    // - {
    //     "selection": true,   // 在选择中显示
    //     "indent": true       // 显示缩进空白
    //   }
    "show_whitespaces": "none",
    // 通话设置
    "calls": {
        // 加入时是否静音（默认：false）
        "mute_on_join": false,
        // 加入时是否共享（默认：false）
        "share_on_join": false
    },
    // 工具栏设置
    "toolbar": {
        // 是否显示面包屑导航（默认：true）
        "breadcrumbs": true,
        // 是否显示快速操作（默认：true）
        "quick_actions": true,
        // 是否显示选择菜单（默认：true）
        "selections_menu": true,
        // 是否显示 AI 助手审查（默认：true）
        "agent_review": true,
        // 是否显示代码操作（默认：true）
        "code_actions": true
    },
    // 标题栏设置
    "title_bar": {
        // 是否显示分支图标（默认：true）
        "show_branch_icon": true,
        // 是否显示分支名称（默认：true）
        "show_branch_name": true,
        // 是否显示项目项目（默认：true）
        "show_project_items": true,
        // 是否显示入门横幅（默认：true）
        "show_onboarding_banner": true,
        // 是否显示用户头像（默认：true）
        "show_user_picture": true,
        // 是否显示登录按钮（默认：true）
        "show_sign_in": true,
        // 是否显示菜单（默认：true）
        "show_menus": true
    },
    // 滚动条设置
    "scrollbar": {
        // 是否显示滚动条：
        // - "auto": 根据需要自动显示
        // - "system": 使用系统设置
        // - "always": 始终显示
        // - "never": 从不显示
        "show": "auto",
        // 是否在滚动条中显示光标位置（默认：true）
        "cursors": true,
        // 是否在滚动条中显示 git 差异（默认：true）
        "git_diff": true,
        // 是否在滚动条中显示搜索结果（默认：true）
        "search_results": true,
        // 是否在滚动条中显示选中的文本（默认：true）
        "selected_text": true,
        // 是否在滚动条中显示选中的符号（默认：true）
        "selected_symbol": true,
        // 是否在滚动条中显示诊断（默认：true）
        "diagnostics": true,
        // 滚动条轴设置
        "axes": {
            // 是否显示水平滚动条（默认：true）
            "horizontal": true,
            // 是否显示垂直滚动条（默认：true）
            "vertical": true
        }
    },
    // 小地图设置
    "minimap": {
        // 是否显示小地图：
        // - true: 显示
        // - false: 不显示
        "show": false,
        // 在何处显示小地图：
        // - "right": 右侧
        // - "left": 左侧
        "display_in": "right",
        // 小地图缩略图设置：
        // - "hidden": 隐藏
        // - "always": 始终显示
        // - "on_hover": 悬停时显示
        "thumb": "always",
        // 是否显示缩略图边框（默认：true）
        "thumb_border": true,
        // 是否高亮当前行（默认：true）
        "current_line_highlight": true,
        // 最大宽度列数
        "max_width_columns": 120
    },
    // 是否启用中键粘贴（默认：true）
    "middle_click_paste": true,
    // 在多缓冲区中双击的行为：
    // - "select": 选择单词
    // - "open": 打开缓冲区
    "double_click_in_multibuffer": "select",
    // 编辑器边距设置
    "gutter": {
        // 是否显示行号（默认：true）
        "line_numbers": true,
        // 是否显示可运行项（默认：true）
        "runnables": true,
        // 是否显示断点（默认：true）
        "breakpoints": true,
        // 是否显示代码折叠（默认：true）
        "folds": true,
        // 最小行号位数
        "min_line_number_digits": 3
    },
    // 缩进引导线设置
    "indent_guides": {
        // 是否启用缩进引导线（默认：true）
        "enabled": true,
        // 引导线宽度（像素）
        "line_width": 1,
        // 活动行的引导线宽度（像素）
        "active_line_width": 1,
        // 引导线着色：
        // - "disabled": 禁用着色
        // - "indent_aware": 根据缩进级别着色
        "coloring": "indent_aware",
        // 背景着色：
        // - "disabled": 禁用背景着色
        // - "indent_aware": 根据缩进级别着色背景
        "background_coloring": "disabled"
    },
    // 是否滚动超过最后一行（默认：true）
    "scroll_beyond_last_line": true,
    // 垂直滚动边距
    "vertical_scroll_margin": 3,
    // 点击时是否自动滚动（默认：true）
    "autoscroll_on_clicks": true,
    // 水平滚动边距
    "horizontal_scroll_margin": 3,
    // 滚动敏感度
    "scroll_sensitivity": 3.0,
    // 快速滚动敏感度
    "fast_scroll_sensitivity": 5.0,
    // 是否显示相对行号（默认：false）
    "relative_line_numbers": false,
    // 搜索是否换行（默认：true）
    "search_wrap": true,
    // 搜索设置
    "search": {
        // 是否显示搜索按钮（默认：true）
        "button": true,
        // 是否启用全词匹配（默认：false）
        "whole_word": false,
        // 是否启用区分大小写（默认：false）
        "case_sensitive": false,
        // 是否包含忽略的文件（默认：false）
        "include_ignored": false,
        // 是否启用正则表达式（默认：false）
        "regex": false
    },
    // 是否从光标位置开始搜索查询（默认：true）
    "seed_search_query_from_cursor": true,
    // 是否使用智能大小写搜索（默认：true）
    // 当查询全为小写时忽略大小写，否则区分大小写
    "use_smartcase_search": true,
    // 内联提示设置
    "inlay_hints": {
        // 是否启用内联提示（默认：true）
        "enabled": true,
        // 是否显示类型提示（默认：true）
        "show_type_hints": true,
        // 是否显示参数提示（默认：true）
        "show_parameter_hints": true,
        // 是否显示其他提示（默认：true）
        "show_other_hints": true,
        // 是否显示提示背景（默认：true）
        "show_background": true,
        // 编辑防抖时间（毫秒）
        "edit_debounce_ms": 700,
        // 滚动防抖时间（毫秒）
        "scroll_debounce_ms": 50,
        // 按修饰键时切换显示
        "toggle_on_modifiers_press": {
            "control": false,
            "shift": false,
            "alt": false,
            "platform": false,
            "function": false
        }
    },
    // 是否调整面板中所有窗格的大小（默认：false）
    "resize_all_panels_in_dock": false,
    // 项目面板设置
    "project_panel": {
        // 是否显示项目面板按钮（默认：true）
        "button": true,
        // 是否隐藏 gitignore 文件（默认：true）
        "hide_gitignore": true,
        // 默认宽度（像素）
        "default_width": 240,
        // 面板停靠位置：
        // - "left": 左侧
        // - "right": 右侧
        "dock": "left",
        // 条目间距（像素）
        "entry_spacing": 0,
        // 是否显示文件图标（默认：true）
        "file_icons": true,
        // 是否显示文件夹图标（默认：true）
        "folder_icons": true,
        // 是否显示 git 状态（默认：true）
        "git_status": true,
        // 缩进大小（像素）
        "indent_size": 20,
        // 是否自动展开条目（默认：true）
        "auto_reveal_entries": true,
        // 是否自动折叠目录（默认：true）
        "auto_fold_dirs": true,
        // 滚动条设置
        "scrollbar": {
            // 是否显示滚动条：
            // - "auto": 根据需要自动显示
            // - "system": 使用系统设置
            // - "always": 始终显示
            // - "never": 从不显示
            "show": "auto"
        },
        // 是否显示诊断（默认：true）
        "show_diagnostics": true,
        // 是否启用粘性滚动（默认：true）
        "sticky_scroll": true,
        // 缩进引导线设置
        "indent_guides": {
            // 是否显示缩进引导线（默认：true）
            "show": true
        },
        // 是否隐藏根目录（默认：false）
        "hide_root": false
    },
    // 大纲面板设置
    "outline_panel": {
        // 是否显示大纲面板按钮（默认：true）
        "button": true,
        // 默认宽度（像素）
        "default_width": 300,
        // 面板停靠位置：
        // - "left": 左侧
        // - "right": 右侧
        "dock": "right",
        // 是否显示文件图标（默认：true）
        "file_icons": true,
        // 是否显示文件夹图标（默认：true）
        "folder_icons": true,
        // 是否显示 git 状态（默认：true）
        "git_status": true,
        // 缩进大小（像素）
        "indent_size": 20,
        // 是否自动展开条目（默认：true）
        "auto_reveal_entries": true,
        // 是否自动折叠目录（默认：true）
        "auto_fold_dirs": true,
        // 缩进引导线设置
        "indent_guides": {
            // 是否显示缩进引导线（默认：true）
            "show": true
        },
        // 滚动条设置
        "scrollbar": {
            // 是否显示滚动条：
            // - "auto": 根据需要自动显示
            // - "system": 使用系统设置
            // - "always": 始终显示
            // - "never": 从不显示
            "show": "auto"
        }
    },
    // 协作面板设置
    "collaboration_panel": {
        // 是否显示协作面板按钮（默认：true）
        "button": true,
        // 面板停靠位置：
        // - "left": 左侧
        // - "right": 右侧
        "dock": "left",
        // 默认宽度（像素）
        "default_width": 240
    },
    // 聊天面板设置
    "chat_panel": {
