    ],
    // 是否读取 SSH 配置（默认：true）
    "read_ssh_config": true,
    // 上下文服务器设置
    "context_servers": {},
    // 代理服务器设置
    "agent_servers": {},
    // 调试器设置
    "debugger": {
        // 步进粒度：
        // - "statement": 语句级别
        // - "line": 行级别
        "stepping_granularity": "line",
        // 是否保存断点（默认：true）
        "save_breakpoints": true,
        // 面板停靠位置
        "dock": "bottom",
        // 是否显示调试器按钮（默认：true）
        "button": true
    }
}
